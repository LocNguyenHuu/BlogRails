<p id="notice"><%= notice %></p>

<h1>Post Details</h1>

<table>
  <thead>
    <tr>
      <th>Posttext</th>
      <th>Postid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_details.each do |post_detail| %>
      <tr>
        <td><%= post_detail.PostText %></td>
        <td><%= post_detail.PostID %></td>
        <td><%= link_to 'Show', post_detail %></td>
        <td><%= link_to 'Edit', edit_post_detail_path(post_detail) %></td>
        <td><%= link_to 'Destroy', post_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

